section#profile

  #buddies
    h3
      padding-bottom 0
      margin-bottom 0

    ul.follows      
      li
        display inline
        padding 0 10px

  #heading
    *
      margin 0
      padding 0

    h2
      text-transform uppercase
      margin-left 5px
      font-size 2em

    #icons
      h4
        float left
        margin 5px        
        color #AAA
      i
        float left
        margin-right 2px

      .location-icon
        margin-left 5px
      .hometown-icon
        margin-top -1px
        margin-left 12px

  #right
    text-align center
    *
      float right

    img
      margin-bottom 1px

    button
      width 150px
      margin 1px 0px

    #joindate
      font-size .8em

  #menu
    ul
      width 100%
      margin 0px      
      padding 0px
      li
        width 100%
        padding 10px
        margin 0px 5px
        background-color #EEE
        border 1px solid #CCC
        border-radius 5px
        cursor pointer

  #sections

    #home
      blockquote
        background #f9f9f9
        border-left 10px solid #ccc
        margin 1.5em 10px
        padding .5em 10px
        quotes "\201C""\201D""\2018""\2019"
        textarea
          width 500px
          min-height 150px
      blockquote:before
        color #ccc
        content open-quote
        font-size 4em
        line-height .1em
        margin-right .25em
        vertical-align -.4em
      blockquote p
        display inline


    #info
      margin-top 30px

  #buttons
    button
       margin 0 5px
       padding 10px

  .user-icon        
    background transparent url('http://d3jzxruh9il70w.cloudfront.net/images/user-icon.png') no-repeat 9px center
  .user-add-icon        
    background transparent url('http://d3jzxruh9il70w.cloudfront.net/images/user-add-icon.png') no-repeat 9px center
  .location-icon       
    width 26px
    background transparent url('http://d3jzxruh9il70w.cloudfront.net/images/location-icon.png') no-repeat 9px center
  .occupation-icon
    background transparent url('http://d3jzxruh9il70w.cloudfront.net/images/location-icon.png') no-repeat 9px center
  .hometown-icon
    width 36px
    background transparent url('http://d3jzxruh9il70w.cloudfront.net/images/hometown-icon.png') no-repeat 9px center
  .edit-icon
    width 34px
    background transparent url('http://d3jzxruh9il70w.cloudfront.net/images/edit-icon.png') no-repeat 9px center
  .cross-icon
    width 36px
    background transparent url('http://d3jzxruh9il70w.cloudfront.net/images/cross-icon.png') no-repeat 9px center

  img#loadingoverlay
    margin-left -10px
    float left
    position fixed
    margin-top 65px
    opacity 0

  button#unfollow.btn-warning
    background-color #faa732
    background-image -moz-linear-gradient(top, #fbb450, #f89406)
    background-image -ms-linear-gradient(top, #fbb450, #f89406)
    background-image -webkit-gradient(linear, 0 0, 0 100%, from(#fbb450), to(#f89406))
    background-image -webkit-linear-gradient(top, #fbb450, #f89406)
    background-image -o-linear-gradient(top, #fbb450, #f89406)
    background-image linear-gradient(top, #fbb450, #f89406)
    background-repeat repeat-x
    border-color #f89406 #f89406 #ad6704
    border-color rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25)
