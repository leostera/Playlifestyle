.row-fluid#profile
  .span9
    .span12#heading
      h2 {{ user.name.first }} {{ user.name.last }}
      section#icons
        i.user-icon
        h4#username {{ user.username }} 
        i.location-icon
        h4#location {{ user.location.str }}
        i.hometown-icon
        h4#hometown {{ user.hometown }}

    section#menu
      ul.nav.nav-tabs
        li.active
          a(data-target="section.tab-pane#home", data-toggle="tab") Home
        li
          a(data-target="section.tab-pane#info", data-toggle="tab") Info
        li
          a(data-target="section.tab-pane#buddies", data-toggle="tab") Social
        li
          a(data-target="section.tab-pane#interests", data-toggle="tab") Interests
        li
          a(data-target="section.tab-pane#companies", data-toggle="tab") Companies

    section.tab-content#sections
      section.tab-pane.active#home
        blockquote {{ user.bio }}

      section.tab-pane#info
        form.form-horizontal
          fieldset
            .control-group#birthday
              label.control-label Birthday
              .controls
                span.uneditable-input.input-xlarge#birthday {{ user.birthday }}

            .control-group#name
              label.control-label Full name
              .controls
                span.uneditable-input.input-medium {{ user.name.first }}
                span.uneditable-input.input-medium {{ user.name.last }}

            .control-group#gender
              label.control-label Gender
              .controls
                span.uneditable-input.input-short {{ user.gender }}

            .control-group#hometown
              label.control-label Hometown
              .controls
                span.uneditable-input.input-xlarge {{ user.location.city }}

      section.tab-pane#buddies
        h3 Follows
        ul.follows#put-follows-here
        h3 Followers
        ul.follows#put-followers-here

  .span3#right
    img(src="http://d3jzxruh9il70w.cloudfront.net{{ user.avatar }}",width="150px",height="150px")
    button.button.btn#follow Follow
    button.hide.button.disabled.btn#unfollow Following
    button.button.btn#sendMessage Send Message
    button.hide.button.btn#invite Invite

    section#statistics
      span#joindate Joined {{ user.joindate }}
      
.modals 